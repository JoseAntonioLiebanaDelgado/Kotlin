<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:enableOnBackInvokedCallback="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MangaShelf"
        tools:targetApi="31">


        <!-- Cambiado el nombre de la actividad principal a MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Agregada la actividad HorizontalScrollViewActivity -->
        <activity
            android:name=".ui.home.HomeFragment"
            android:label="Horizontal Scroll View Activity">
            <!-- Puedes agregar configuraciones adicionales aquÃ­ si es necesario -->
        </activity>

        <!-- Agregada la actividad DetalleMangaActivity -->
        <activity
            android:name=".DetalleMangaActivity"
            android:label="DetalleMangaActivity">
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>
